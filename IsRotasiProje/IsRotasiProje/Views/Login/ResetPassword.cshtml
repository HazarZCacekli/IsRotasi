@using IsRotasiProje.ViewModel;
@{
	Layout = "_LayoutLogin";
}
@model ResetPasswordViewModel
<div class="limiter">
	<div class="container-login100" style="background-image:url('/images/bg-01.jpg');">
		<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
			<form class="login100-form validate-form" asp-controller="Login" asp-action="ResetPassword">
				<div asp-validation-summary="All" class="text-danger"></div>
				<span class="login100-form-title p-b-49">
					Şifre Sıfırlama
				</span>
				<h5>@ViewBag.Error</h5>
				<input type="hidden" name="Email" value="@Model.Email">
				<input type="hidden" name="Token" value="@Model.Token">
				<h4>@ViewBag.Error</h4>
				<div class="wrap-input100 validate-input m-b-23" data-validate="Şifre Boş Bırakılamaz">
					<span class="label-input100">Yeni Şifre</span>
					<input class="input100" type="password"  placeholder="Yeni Şifrenizi Girin" name="Password" required>
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Şifre Boş Bırakılamaz">
					<span class="label-input100">Yeni Şifre Tekrar</span>
					<input class="input100" type="password"  placeholder="Yeni Şifrenizi Tekrar Girin" name="ConfirmPassword" required>
					<span class="focus-input100" data-symbol="&#xf190;"></span>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="text-right p-t-8 p-b-31">
				</div>

				<div class="container-login100-form-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn">
							Şifremi Sıfırla
						</button>
					</div>
				</div>

				<div class="flex-col-c p-t-155">
				</div>
			</form>
		</div>
	</div>
</div>