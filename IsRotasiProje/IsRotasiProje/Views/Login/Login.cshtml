@using IsRotasiProje.ViewModel;
@{
	Layout = "_LayoutLogin";
}
@model LoginViewModel
<div class="limiter">
	<div class="container-login100" style="background-image:url('/images/bg-01.jpg');">
		<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
			<form class="login100-form validate-form" asp-controller="Login" asp-action="Login">
				<span class="login100-form-title p-b-49">
					Giriş Yap
				</span>
				<h5>@ViewBag.Error</h5>
				<h5>@TempData["Success"]</h5>
				<h5>@TempData["Info"]</h5>
				<div class="wrap-input100 validate-input m-b-23" data-validate="E-Mail Boş Bırakılamaz">
					<span class="label-input100">E-Mail</span>
					<input class="input100" type="email" asp-for="@Model.username" placeholder="E-Mail Adresinizi Girin" required>
					<span class="focus-input100" data-symbol="&#xf1a6;"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Şifre Boş Bırakılamaz">
					<span class="label-input100">Şifre</span>
					<input class="input100" type="password" asp-for="@Model.password" placeholder="Şifrenizi Girin" required>
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>

				<div class="text-right p-t-8 p-b-31">
					<a asp-action="ForgotPassword">
						Şifremi Unuttum
					</a>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="checkbox" name="rememberMe" value="true" id="flexCheckDefault">
					<label class="form-check-label" for="flexCheckDefault">
						Beni Hatırla
					</label>
				</div>
				<div class="container-login100-form-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn">
							Giriş Yap
						</button>
					</div>
				</div>

				<div class="flex-col-c p-t-155">
					<span class="txt1 p-b-17">
						Hesabın Yok Mu?
					</span>

					<a asp-action="RegisterAday" class="txt2">
						Aday Kayıt 
					</a>
					<a asp-action="RegisterIsveren" class="txt2">
						İşveren Kayıt 
					</a>
				</div>
			</form>
		</div>
	</div>
</div>