@{
    Layout = "_LayoutLogin";
}
<partial name="_PartialProfileSidebar" />


<div class="limiter" >
    <div class="container-login100" style="background-image:url('/images/bg-02.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form class="login100-form validate-form" asp-controller="Profile" asp-action="ChangePassword">
                <span class="login100-form-title p-b-49">
                    Şifre Değiştir
                </span>
                <h4>@ViewBag.Basarili @ViewBag.Hata @ViewBag.Uyusmazlik @ViewBag.Length</h4>
                <div class="wrap-input100 validate-input" data-validate="Şifre Boş Bırakılamaz">
                    <span class="label-input100">Eski Şifre</span>
                    <input class="input100" type="password" name="oldPassword" placeholder="Eski Şifrenizi Girin">
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Şifre Boş Bırakılamaz" style="margin-top:20px;">
                    <span class="label-input100">Yeni Şifre</span>
                    <input class="input100" type="password" name="newPassword" placeholder="Yeni Şifrenizi Girin">
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Şifre Boş Bırakılamaz" style="margin-top:20px;">
                    <span class="label-input100">Yeni Şifre Tekrar</span>
                    <input class="input100" type="password" name="newPasswordAgain" placeholder="Yeni Şifrenizi Tekrar Girin">
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                </div>

                <div class="text-right p-t-8 p-b-31">
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Değiştir
                        </button>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>
