@{
    Layout = "_LayoutLogin";
}
@model AppUser

<partial name="_PartialProfileSidebar" />


<div class="container-login100" style="background-image:url('/images/bg-02.jpg');">
    <div class="col-lg-8" style="margin-left:230px;">
        <div class="card">
            <div class="card-header">Özgeçmiş (CV)</div>
            <div class="card-body">
                <div class="card-title">
                    <h3 class="text-center title-2">Bilgilerim</h3>
                </div>
                <hr>
                <form asp-controller="Profile" asp-action="AdayCV" method="post" enctype="multipart/form-data">
                    <div class="row form-group">
                        <input type="hidden" asp-for="@Model.Image" value="@Model.Image">
                        <input type="hidden" asp-for="@Model.Tarih" value="@Model.Tarih">
                        <input type="hidden" asp-for="@Model.UserName" value="@Model.UserName">
                        <div class="col-6"> 
                            <img src="/images/@Model.Image" class="img-thumbnail" alt="Görsel Bulunamadı" style="height:250px;width:200px;margin-left:185px;">
                        </div>
                        <div class="col-6">
                            <label for="file-input" class=" form-control-label">Fotoğraf Seç</label>
                            <input type="file" id="file-input" name="photo" class="form-control-file">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="name" class="control-label mb-1">Ad Soyad</label>
                                <input id="name" type="text" class="form-control" aria-invalid="false" disabled value="@Model.Ad" asp-for="@Model.Ad">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="email" class="control-label mb-1">E-Mail Adresi</label>
                                <input id="email" type="email" class="form-control" aria-invalid="false" disabled value="@Model.Email" asp-for="@Model.Email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="phone" class="control-label mb-1">Telefon Numarası</label>
                                <input id="phone" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" class="form-control" aria-invalid="false" value="@Model.PhoneNumber" placeholder="555-555-5555" asp-for="@Model.PhoneNumber">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="borndate" class="control-label mb-1">Doğum Tarihi (Ay/Gün/Yıl)</label>
                                <input id="borndate" type="text" class="form-control" aria-invalid="false" asp-for="@Model.DogumTarihi" value="@Model.DogumTarihi">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="exp" class="control-label mb-1">Deneyim</label>
                                <textarea id="exp" type="text" class="form-control" aria-invalid="false" asp-for="@Model.Deneyim">@Model.Deneyim</textarea>
                            </div>
                        </div>
                        <div class="col-6"> 
                            <div class="form-group">
                                <label for="education" class="control-label mb-1">Eğitim Bilgileri</label>
                                <textarea id="education" type="text" class="form-control" aria-invalid="false" asp-for="@Model.Egitim">@Model.Egitim</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="exp" class="control-label mb-1">Bilgisayar Bilgisi </label>
                                <textarea id="exp" type="text" class="form-control" aria-invalid="false" placeholder="Örn: Office Programları" asp-for="@Model.Bilgisayar">@Model.Bilgisayar</textarea>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="hobby" class="control-label mb-1">Hobiler ve İlgi Alanları</label>
                                <textarea id="hobby" type="text" class="form-control" aria-invalid="false" asp-for="@Model.Hobi">@Model.Hobi</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                                <label for="exp" class="control-label mb-1">Özet Bilgi ve Önyazı </label>
                                <textarea id="exp" type="text" class="form-control" aria-invalid="false" asp-for="@Model.Ozet">@Model.Ozet</textarea>
                            </div>
                    <div>
                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                            <i class="fa fa-lock fa-lg"></i>&nbsp;
                            <span id="payment-button-amount">Kaydet</span>

                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>