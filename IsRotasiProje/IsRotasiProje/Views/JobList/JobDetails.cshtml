@using IsRotasiProje.Classes;
@using IsRotasiProje.ViewModel;
@model Ilan

<main>

    <header class="site-header">
        <div class="section-overlay"></div>

        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-12 text-center">
                    <h1 class="text-white">İlan Detayları</h1>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>

                            <li class="breadcrumb-item active" aria-current="page">İlan Detayları</li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </header>


    <section class="job-section section-padding pb-0" style="margin-bottom:250px;">
        <div class="container">
            <div class="row">

                <div class="col-lg-8 col-12">
                    <h2 class="job-title mb-0">@Model.IlanAd</h2>
                    <h5>@TempData["Error"]</h5>
                    <h5>@TempData["Success"]</h5>
                    <h5>@TempData["Again"]</h5>
                    <div class="job-thumb job-thumb-detail">
                        <div class="d-flex flex-wrap align-items-center border-bottom pt-lg-3 pt-2 pb-3 mb-4">
                            <p class="job-location mb-0">
                                <i class="custom-icon bi-geo-alt me-1"></i>
                                @Model.Sehir.SehirIsim
                            </p>

                            <p class="job-date mb-0">
                                <i class="custom-icon bi-clock me-1"></i>
                                @DateWriting.DateWrite(Model.Tarih)
                            </p>

                            <p class="job-price mb-0">
                                <i class="custom-icon bi-cash me-1"></i>
                                @Model.MaasAraligi.Aralik
                            </p>

                            <div class="d-flex">
                                <p class="mb-0">
                                    <a class="badge badge-level">@Model.Pozisyon.PozisyonIsim</a>
                                </p>

                                <p class="mb-0">
                                    <a class="badge">@Model.CalismaSekli.CalismaSekliIsim</a>
                                </p>
                            </div>
                        </div>

                        <h4 class="mt-4 mb-2">İş Tanımı</h4>

                        <p>@Model.IsTanimi</p>



                        <h5 class="mt-4 mb-3">Adayda Aradığımız Özellikler</h5>

                        <p>@Model.AdayGereklilik</p>

                        <div class="d-flex justify-content-center flex-wrap mt-5 border-top pt-4">
                            <a asp-action="Basvur" asp-route-ilanId="@Model.IlanId" class="custom-btn btn mt-2">Şimdi Başvur</a>

                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-12 mt-5 mt-lg-0">
                    <div class="job-thumb job-thumb-detail-box bg-white shadow-lg">
                        <div class="d-flex align-items-center">
                            <div class="job-image-wrap d-flex align-items-center bg-white shadow-lg mb-3">
                                <img src="/images/@Model.User.Image" class="job-image me-3 img-fluid" alt="">

                                <p class="mb-0">@Model.User.Ad</p>
                            </div>


                        </div>

                        <h6 class="mt-3 mb-2">İşveren Hakkında</h6>

                        <p>@Model.User.Ozet</p>

                        <h6 class="mt-4 mb-3">İletişim Bilgileri</h6>

                        <p class="mb-2">
                            <i class="custom-icon bi-globe me-1"></i>

                            <a href="@Model.User.Website" class="site-footer-link">
                                @Model.User.Website
                            </a>
                        </p>

                        <p class="mb-2">
                            <i class="custom-icon bi-telephone me-1"></i>

                            <a href="tel: @Model.User.PhoneNumber" class="site-footer-link">
                                @Model.User.PhoneNumber
                            </a>
                        </p>

                        <p>
                            <i class="custom-icon bi-envelope me-1"></i>

                            <a href="mailto:@(Model.User.Email)" class="site-footer-link">
                                @Model.User.Email
                            </a>
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </section>


    

    <partial name="_PartialBottomBlueSection" />
</main>


