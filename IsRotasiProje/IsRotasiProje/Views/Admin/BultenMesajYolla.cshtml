@using IsRotasiProje.Models
@{
    Layout = "_LayoutAdmin";
}
@model Bulten

<div class="col-lg-8 col-12 mx-auto" style="margin-top:200px;">
    <form asp-controller="Admin" asp-action="BultenMesajYolla">
        <h5>@ViewBag.Success</h5>
        <h5>@ViewBag.Error</h5>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-12">
            <label for="full-name">Konu</label>
            <input type="text" name="subject" id="full-name" class="form-control" >
        </div>

        <div class="col-lg-12 col-12">
            <label for="message">Mesaj</label>
            <textarea name="body" rows="6" class="form-control" id="message"></textarea>
        </div>


        <div class="col-lg-12 col-12" style="margin-top:40px;">
            <button class="btn btn-primary" type="submit" >Gönder</button>
        </div>

    </div>
    </form>
</div>