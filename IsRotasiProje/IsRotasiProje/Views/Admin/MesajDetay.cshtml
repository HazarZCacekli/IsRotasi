@using IsRotasiProje.Models
@{
    Layout = "_LayoutAdmin";
}
@model Iletisim

<div class="col-lg-8 col-12 mx-auto" style="margin-top:200px;">

    <div class="row">
        <div class="col-lg-6 col-md-6 col-12">
            <label for="full-name">Ad Soyad</label>
            <input type="text" name="Adsoyad" id="full-name" class="form-control" value="@Model.AdSoyad">
        </div>

        <div class="col-lg-6 col-md-6 col-12">
            <label for="email">Email Adresi</label>
            <input type="email" name="Email" id="email" class="form-control" value="@Model.Email">
        </div>

        <div class="col-lg-12 col-12">
            <label for="message">Mesaj</label>
            <textarea name="Mesaj" rows="6" class="form-control" id="message">@Model.Mesaj</textarea>
        </div>

        <div class="col-lg-12 col-12" style="margin-top:40px;">
            <a class="btn btn-danger" asp-controller="Admin" asp-action="MesajDetaySil" asp-route-id="@Model.IletisimId" >Mesajı Sil</a>
        </div>

        <div class="col-lg-12 col-12" style="margin-top:40px;">
            <a class="btn btn-primary" href="mailto:@Model.Email">Cevap Ver</a>
        </div>

    </div>
</div>