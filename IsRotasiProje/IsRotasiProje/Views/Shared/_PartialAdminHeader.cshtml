
<header class="header-desktop">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="header-wrap">

                <div class="header-button" style="margin-left:1250px;">
                    <div class="account-wrap">
                        <div class="account-item clearfix js-item-menu">

                            <div class="content">
                                <a class="js-acc-btn" href="#">@TempData["Username"]</a>
                            </div>
                            <div class="account-dropdown js-dropdown">
                                <div class="info clearfix">
                                    <div class="image">
                                        <a >
                                            <img src="/images/@TempData["Image"]" alt="@TempData["Username"]" />
                                        </a>
                                    </div>
                                    <div class="content">
                                        <h5 class="name">
                                            <a>@User.Identity.Name.ToLower()</a>
                                        </h5>
                                        
                                    </div>
                                </div>
                                <div class="account-dropdown__body">
                                </div>
                                <div class="account-dropdown__footer">
                                    <a asp-controller="Login" asp-action="Logout">
                                        <i class="zmdi zmdi-power"></i>Çıkış Yap
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
